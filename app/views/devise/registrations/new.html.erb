<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "d-flex flex-column",style:"height:100vh;"}) do |f| %>
  <div class="mb-auto">
    <div class="field">
      <%= f.text_field :name, autofocus: true,class: 'form-control p-3 border-bottom',placeholder: 'Full Name' %>
    </div>

    <div class="field">
      <%= f.email_field :email,  autocomplete: "email",class: 'form-control p-3 border-bottom',placeholder: 'Email' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password",class: 'form-control p-3 border-bottom',placeholder: 'Password' %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control p-3 border-bottom',placeholder: 'Confirm password' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary p-3 w-100' %>
  </div>
<% end %>
