<% if false %>
<% @spendings.each do |spending| %>
  <%= render spending %>
  <p>
    <%= link_to "Show this spending", spending %>
  </p>
<% end %>
<% end %>

<div class="d-flex flex-column" style="height:100vh;">
  <div id="spendings" class="mb-auto h-100">
    <div class="d-flex justify-content-between p-3 m-2 border-success">
      <span>total amount spent</span>
      <span>$<%= @spendings.sum(:amount) %></span>
    </div>
    <% @spendings.each do |spending| %>
      <%= render spending %>
    <% end %>
  </div>
  <div class="p-5 bg-success">
    <%= link_to "New spending", new_spending_path,class: 'btn btn-success p-3 w-100 border border-white' %>
  </div>
</div>
