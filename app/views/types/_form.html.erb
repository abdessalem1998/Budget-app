<%= form_with(model: type, html: {class: "d-flex flex-column",style:"height:100vh;"}) do |form| %>
    <div class="mb-auto">
      <div class="field">
        <%= form.text_field :icon,class: 'form-control p-3 border-bottom', required: true, placeholder: 'Icon URL' %>
      </div>
      <div class="field">
        <%= form.text_field :name,class: 'form-control p-3 border-bottom', required: true, placeholder: 'Name' %>
      </div>
    </div>
    <div class="p-5 bg-success">
      <%= form.submit class: 'btn btn-success p-3 w-100 border border-white' %>
    </div>
<% end %>
