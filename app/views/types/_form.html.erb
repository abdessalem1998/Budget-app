<%= form_with(model: type) do |form| %>

  <div class="d-flex flex-column" style="height:100vh;">
    <div class="mb-auto h-100">
      <div class="field">
        <%= form.text_field :icon,class: 'form-control p-3 border-bottom', placeholder: 'Icon URL' %>
      </div>
      <div class="field">
        <%= form.text_field :name,class: 'form-control p-3 border-bottom', placeholder: 'Name' %>
      </div>
    </div>
    <div class="p-5 bg-success">
      <%= form.submit class: 'btn btn-success p-3 w-100 border border-white' %>
    </div>
  </div>
<% end %>
