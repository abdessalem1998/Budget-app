<div id="<%= dom_id type %>">
  <div class="card my-3">
  <div class="row g-0">
    <div class="col-3 m-3">
      <img src="<%= type.icon %>" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-5">
      <div class="card-body">
        <h5 class="card-title"><%= type.name %></h5>
        <p class="card-text"><small class="text-muted"><%= type.created_at %></small></p>
      </div>
    </div>
    <div class="col-2 d-flex justify-content-center align-items-center p-1">
      <h2><b>$<%= type.spendings.sum(:amount) %></b></h2>
    </div>
  </div>
</div>
</div>
